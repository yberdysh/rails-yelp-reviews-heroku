<h1>Restaurants on Vegan Montreal</h1>


<%= link_to 'Add New Restaurant', new_restaurant_path %>

<% @restaurants.each do |restaurant| %>
  <h2> <%=restaurant.name %></h2>
  <h4><%= link_to "Read reviews", restaurant_path(restaurant) %></h4>
  <div class="info">
    <p>Average rating: <%= restaurant.average_rating %></p>
    <p><%= restaurant.address %></p>
    <p><%= restaurant.phone_number %></p>
  </div>
<% end %>
